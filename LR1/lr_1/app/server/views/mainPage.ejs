<!DOCTYPE>
<html lang="en">

<head>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todos</title>
</head>

<body>
    <section class="vh-100" style="background-color: #eee;">
        <div class="d-flex justify-content-center btn-toolbar">
            <a class="btn btn-outline-secondary" style="margin-right: 20px;" role="button" href="/">All</a>
            <a class="btn btn-outline-secondary" style="margin-right: 20px;" role="button"
                href="/?filterStatus=Pending">Pending</a>
            <a class="btn btn-outline-secondary" style="margin-right: 20px;" role="button"
                href="/?filterStatus=Completed">Completed</a>
        </div>
        <table class="table mb-4">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Content</th>
                    <th scope="col">Status</th>
                    <th scope="col">Date</th>
                    <th scope="col">File</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < todos.length; i++) { %>
                    <tr>
                        <td>
                            <%= todos[i].title %>
                        </td>
                        <td>
                            <%= todos[i].content %>
                        </td>
                        <td>
                            <%= todos[i].status %>
                        </td>
                        <td>
                            <%= todos[i].date.toString() %>
                        </td>
                        <td><a href="/download?filePath=<%= todos[i].file %>">
                                <%= todos[i].file %>
                            </a></td>
                        <td>
                            <a class="btn btn-danger" role="button" href="/delete?id=<%= todos[i].id%>">Delete</a>
                            <%if(todos[i].status==="Pending" ) {%>
                                <a class="btn btn-success" role="button"
                                    href="/changeTodoStatus?id=<%= todos[i].id%>&status=Completed">Complete</a>
                                <%} else {%>
                                    <a class="btn btn-success" role="button"
                                        href="/changeTodoStatus?id=<%= todos[i].id%>&status=Pending">Pending</a>
                                    <%}%>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            <a class="btn btn-primary" style="margin-right: 20px;" role="button" href="/new">Create new</a>
        </div>
    </section>
</body>

</html>